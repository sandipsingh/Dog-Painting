<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.lighter"
    android:versionCode="8"
    android:versionName="1.7" >

    <uses-sdk android:minSdkVersion="7" />
<uses-permission android:name="android.permission.RECORD_AUDIO"></uses-permission>
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:icon="@drawable/lighterlogo"
        android:label="@string/app_name" >
        <activity
            android:name="com.app.lighter.LighterSelectionActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.google.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />
        <activity
            android:name="com.app.lighter.ParticleViewActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" />
        <activity
            android:name="com.app.lighter.lighter.CandleRotationActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.app.lighter.Interstitial"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.app.lighter.Settings"
            android:label="@string/title_activity_settings"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="com.app.lighter.About"
            android:label="@string/title_activity_settings"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="com.app.lighter.Second"
            android:label="@string/title_activity_second" >
        </activity>
        <activity
            android:name="com.app.lighter.LighterWithImage"
            android:label="@string/title_activity_second" >
        </activity>
        <activity
            android:name="com.app.lighter.Flame_color"
            android:label="@string/title_activity_flame_color" >
        </activity>
    </application>

</manifest>